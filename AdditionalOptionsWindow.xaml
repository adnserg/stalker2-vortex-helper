<Window x:Class="Stalker2ModManager.AdditionalOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Additional Options" Height="300" Width="500"
        Background="#FF1E1E1E" WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <!-- Используем стили из MainWindow -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#40000000" BlurRadius="3" ShadowDepth="1"/>
                            </Border.Effect>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E42"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFD4D4D4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#FF007ACC" BorderThickness="2" CornerRadius="8">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <Grid Grid.Row="0" Margin="0,0,0,15" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Additional Options" 
                          FontSize="16" 
                          FontWeight="Bold"
                          Foreground="#FFFFFFFF"
                          VerticalAlignment="Center"/>
                <Button Grid.Column="1" Content="✕" Width="30" Height="30" Click="Close_Click"
                        Background="#FF2D2D30" Padding="0"/>
            </Grid>

            <!-- Options -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <CheckBox x:Name="SortBySnapshotCheckBox" 
                         Content="Sort mods according to JSON/TXT file"
                         Margin="0,0,0,10"
                         IsChecked="False"
                         Checked="SortBySnapshotCheckBox_Checked"
                         Unchecked="SortBySnapshotCheckBox_Unchecked"/>
                <StackPanel Margin="25,0,0,10" Orientation="Horizontal">
                    <TextBlock Text="File path:" 
                               Foreground="#FF888888"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <TextBox x:Name="JsonFilePathTextBox" 
                             IsEnabled="False"
                             MinWidth="200"
                             VerticalContentAlignment="Center"/>
                    <Button Content="Browse..." 
                            Click="BrowseJsonFile_Click"
                            IsEnabled="False"
                            x:Name="BrowseJsonButton"
                            Margin="5,0,0,0"
                            Padding="8,5"/>
                </StackPanel>
                <TextBlock Text="Select a JSON or TXT file (any file with mod order) to sort mods based on its order."
                       Foreground="#FF888888"
                       FontSize="11"
                       TextWrapping="Wrap"
                       Margin="25,0,0,15"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Apply" Click="Apply_Click" Margin="0,0,5,0" Padding="15,8"/>
                <Button Content="Cancel" Click="Cancel_Click" Padding="15,8"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

