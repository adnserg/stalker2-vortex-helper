<Window x:Class="Stalker2ModManager.Views.AdditionalOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Additional Options" Height="550" Width="500"
        Background="#FF1E1E1E" WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Window.Resources>
        <!-- Hover color to match main window -->
        <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#FF5A5A5A"/>
        <!-- Используем стили из MainWindow (выравниваем поведение) -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#40000000" BlurRadius="3" ShadowDepth="1"/>
                            </Border.Effect>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFD4D4D4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#FF007ACC" BorderThickness="2" CornerRadius="8">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <Grid Grid.Row="0" Margin="0,0,0,15" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Additional Options" 
                          FontSize="16" 
                          FontWeight="Bold"
                          Foreground="#FFFFFFFF"
                          VerticalAlignment="Center"/>
                <Button Grid.Column="1" Content="✕" Width="30" Height="30" Click="Close_Click"
                        Padding="0"/>
            </Grid>

            <!-- Options -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15">
                <StackPanel>
                    <!-- Mod Order Options -->
                    <TextBlock x:Name="ModOrderHeader" 
                               Text="Mod Order" 
                               FontSize="14" 
                               FontWeight="Bold"
                               Foreground="#FFFFFFFF"
                               Margin="0,0,0,10"/>
                    <CheckBox x:Name="SortBySnapshotCheckBox" 
                             Content="Sort mods according to JSON/TXT file"
                             Margin="0,0,0,10"
                             IsChecked="False"
                             Checked="SortBySnapshotCheckBox_Checked"
                             Unchecked="SortBySnapshotCheckBox_Unchecked"/>
                    <StackPanel Margin="25,0,0,10" Orientation="Horizontal">
                        <TextBlock Text="File path:" 
                                   Foreground="#FF888888"
                                   FontSize="11"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <TextBox x:Name="JsonFilePathTextBox" 
                                 IsEnabled="False"
                                 MinWidth="200"
                                 VerticalContentAlignment="Center"/>
                        <Button Content="Browse..." 
                                Click="BrowseJsonFile_Click"
                                IsEnabled="False"
                                x:Name="BrowseJsonButton"
                                Margin="5,0,0,0"
                                Padding="8,5"/>
                        <Button Content="Apply" 
                                Click="Apply_Click"
                                IsEnabled="False"
                                x:Name="ApplyButton"
                                Margin="5,0,0,0"
                                Padding="8,5"/>
                    </StackPanel>
                    <TextBlock Text="Select a JSON or TXT file (any file with mod order) to sort mods based on its order."
                           Foreground="#FF888888"
                           FontSize="11"
                           TextWrapping="Wrap"
                           Margin="25,0,0,15"/>
                    <CheckBox x:Name="ConsiderModVersionCheckBox"
                             Content="Consider mod versions when matching order"
                             Margin="0,0,0,15"
                             IsChecked="False"
                             Checked="ConsiderModVersionCheckBox_Checked"
                             Unchecked="ConsiderModVersionCheckBox_Unchecked"/>
                    
                    <!-- Settings -->
                    <TextBlock x:Name="SettingsHeader" 
                               Text="Settings" 
                               FontSize="14" 
                               FontWeight="Bold"
                               Foreground="#FFFFFFFF"
                               Margin="0,10,0,10"/>
                    <CheckBox x:Name="ValidateGamePathCheckBox"
                             Content="Validate game path"
                             Margin="0,0,0,15"
                             IsChecked="True"
                             Checked="ValidateGamePathCheckBox_Checked"
                             Unchecked="ValidateGamePathCheckBox_Unchecked"/>
                    
                    <!-- Localization -->
                    <TextBlock x:Name="LocalizationHeader" 
                               Text="Localization" 
                               FontSize="14" 
                               FontWeight="Bold"
                               Foreground="#FFFFFFFF"
                               Margin="0,10,0,10"/>
                    <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                        <Button x:Name="LoadCustomLocalizationButton" 
                                Content="Load Custom Localization..." 
                                Click="LoadCustomLocalization_Click"
                                Padding="10,5" HorizontalAlignment="Left"/>
                        <Button x:Name="ResetLocalizationButton" 
                                Content="Reset to Default Localization" 
                                Click="ResetLocalization_Click"
                                Padding="10,5" Cursor="Hand" HorizontalAlignment="Left" Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <!-- Quick Access -->
                    <TextBlock x:Name="QuickAccessHeader" 
                               Text="Quick Access" 
                               FontSize="14" 
                               FontWeight="Bold"
                               Foreground="#FFFFFFFF"
                               Margin="0,10,0,10"/>
                    <StackPanel Margin="0,0,0,10">
                        <Button x:Name="OpenAppFolderButton" 
                                Content="Open Application Folder" 
                                Click="OpenAppFolder_Click"
                                Padding="10,5"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Left"/>
                        <Button x:Name="OpenGameRootButton" 
                                Content="Open Stalker 2 Root Folder" 
                                Click="OpenGameRoot_Click"
                                Padding="10,5"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Left"/>
                        <Button x:Name="OpenModsFolderButton" 
                                Content="Open ~mods Folder" 
                                Click="OpenModsFolder_Click"
                                Padding="10,5"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="OkButton" Content="OK" Click="Ok_Click" Padding="15,8" Margin="0,0,8,0"/>
                <Button x:Name="CancelButton" Content="Cancel" Click="Cancel_Click" Padding="15,8"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

