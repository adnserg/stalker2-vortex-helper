<Window x:Class="Stalker2ModManager.Views.DlcModLoaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Herbata's Mod as DLC Loader" Height="250" Width="500"
        Background="#FF1E1E1E" WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style TargetType="Button" x:Key="BorderlessButtonStyle">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E42"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border BorderBrush="#FF007ACC" BorderThickness="2" CornerRadius="8">
        <Grid Margin="15,15,15,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <Grid Grid.Row="0" Margin="0,0,0,15" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Herbata's Mod as DLC Loader" 
                          FontSize="18" 
                          FontWeight="Bold"
                          Foreground="#FFFFFFFF"
                          VerticalAlignment="Center"/>
                <Button Grid.Column="1" Content="âœ•" Width="30" Height="30" Click="Close_Click"
                        Background="#FF2D2D30" Padding="0"/>
            </Grid>

            <!-- Content -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="Load mods as DLCs" 
                          FontSize="14" 
                          Foreground="#FFD4D4D4"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"/>
                
                <Button Content="Run" 
                        Click="RunButton_Click" 
                        HorizontalAlignment="Center"
                        Width="155" 
                        Height="35"
                        FontSize="14"
                        Margin="0,0,0,15"/>
                
                <TextBlock FontSize="11" 
                          Foreground="#FF888888"
                          HorizontalAlignment="Center"
                          Margin="0,10,0,5">
                    <Run Text="Author: " />
                    <Hyperlink NavigateUri="https://github.com/herbatka" RequestNavigate="AuthorLink_RequestNavigate">
                        <Run Text="https://github.com/herbatka" Foreground="#FF007ACC"/>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>

            <!-- Links -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Style="{StaticResource BorderlessButtonStyle}" 
                        Width="40" Height="40" 
                        Click="GitHubImage_Click"
                        ToolTip="GitHub Repository">
                    <Image Source="https://github.githubassets.com/assets/GitHub-Mark-ea2971cee799.png"/>
                </Button>
                <Button Style="{StaticResource BorderlessButtonStyle}" 
                        Width="32" Height="32" 
                        Margin="5,0,0,0" 
                        Click="NexusModsImage_Click"
                        ToolTip="Nexus Mods">
                    <Image Source="https://images.nexusmods.com/favicons/ReskinOrange/favicon-230x230.png"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

