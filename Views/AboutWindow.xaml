<Window x:Class="Stalker2ModManager.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="220" Width="460"
        Background="#FF1E1E1E" WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterOwner">
    <Border BorderBrush="#FF007ACC" BorderThickness="2" CornerRadius="8">
        <Grid Margin="15,15,15,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,12" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="About S.T.A.L.K.E.R. 2 Mod Manager" 
                           FontSize="16" FontWeight="Bold" Foreground="#FFFFFFFF"/>
                <Button Grid.Column="1" Content="âœ•" Width="30" Height="30" Click="Close_Click"
                        Background="#FF2D2D30" Foreground="#FFFFFFFF" Padding="0" Cursor="Hand"/>
            </Grid>

            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <TextBlock Foreground="#FFD4D4D4" TextWrapping="Wrap" Margin="0,0,0,10">
                    <Run Text="Author: " />
                    <Hyperlink NavigateUri="https://github.com/adnserg" RequestNavigate="Link_RequestNavigate" Cursor="Hand">
                        <Run Text="https://github.com/adnserg"/>
                    </Hyperlink>
                </TextBlock>
                <TextBlock Foreground="#FFD4D4D4" TextWrapping="Wrap" Margin="0,0,0,10">
                    <Run Text="Repository: " />
                    <Hyperlink NavigateUri="https://github.com/adnserg/stalker2-vortex-helper/" RequestNavigate="Link_RequestNavigate" Cursor="Hand">
                        <Run Text="https://github.com/adnserg/stalker2-vortex-helper/"/>
                    </Hyperlink>
                </TextBlock>
                <TextBlock Foreground="#FF888888" FontSize="11" TextWrapping="Wrap">
                    <Run Text="Thanks to Herbata for the DLC Mod Loader concept (GitHub: " />
                    <Hyperlink NavigateUri="https://github.com/herbatka" RequestNavigate="Link_RequestNavigate" Cursor="Hand">
                        <Run Text="herbatka"/>
                    </Hyperlink>
                    <Run Text=")"/>
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Close" Click="Close_Click" Padding="12,6" Background="#FF2D2D30" Foreground="#FFFFFFFF" Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

