<Window x:Class="Stalker2ModManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="S.T.A.L.K.E.R. 2 Mod Manager" Height="750" Width="1100"
        Background="#FF1E1E1E" WindowStyle="None" AllowsTransparency="True"
        ResizeMode="CanResize" MinWidth="800" MinHeight="600" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#FF5A5A5A"/>
        
        <!-- Global style for Popup in MenuItem (submenu container) -->
        <Style TargetType="Popup">
            <Setter Property="AllowsTransparency" Value="True"/>
        </Style>
        
        <!-- Global style for Border in Popup (submenu container) -->
        <Style TargetType="Border" x:Key="SubmenuBorderStyle">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="BorderBrush" Value="#FF464646"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="2"/>
        </Style>

        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#40000000" BlurRadius="3" ShadowDepth="1"/>
                            </Border.Effect>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#FF1E1E1E"/>
                    <Setter Property="Foreground" Value="#FF666666"/>
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Menu Style -->
        <Style TargetType="Menu">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Resources>
                <!-- Style for Popup background (submenu container) -->
                <Style TargetType="Popup">
                    <Setter Property="AllowsTransparency" Value="True"/>
                </Style>
                <!-- Style for Border in Popup (submenu container border) -->
                <Style TargetType="Border">
                    <Setter Property="Background" Value="#FF2D2D30"/>
                    <Setter Property="BorderBrush" Value="#FF464646"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="CornerRadius" Value="2"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Grid>
                            <Border x:Name="Border" 
                                    Background="{TemplateBinding Background}" 
                                    BorderThickness="0"
                                    Padding="{TemplateBinding Padding}"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="1"
                                                    ContentSource="Header" 
                                                    RecognizesAccessKey="True" 
                                                    VerticalAlignment="Center" 
                                                    HorizontalAlignment="Center"
                                                    TextBlock.TextAlignment="Center"/>
                                </Grid>
                            </Border>
                            <Popup x:Name="PART_Popup" 
                                   AllowsTransparency="True" 
                                   Placement="Bottom" 
                                   HorizontalOffset="-2" 
                                   VerticalOffset="-3" 
                                   Focusable="False" 
                                   PopupAnimation="Fade" 
                                   IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}">
                                <Border x:Name="SubMenuBorder" 
                                        Background="#FF2D2D30" 
                                        BorderBrush="#FF464646" 
                                        BorderThickness="1" 
                                        CornerRadius="2">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#80000000" BlurRadius="8" ShadowDepth="2" Opacity="0.5"/>
                                    </Border.Effect>
                                    <ScrollViewer x:Name="SubMenuScrollViewer" 
                                                Style="{DynamicResource {ComponentResourceKey ResourceId=MenuScrollViewer, TypeInTargetAssembly={x:Type FrameworkElement}}}" 
                                                Grid.IsSharedSizeScope="True" 
                                                Margin="0,2,0,2" 
                                                Padding="2">
                                        <ItemsPresenter x:Name="ItemsPresenter" 
                                                      KeyboardNavigation.DirectionalNavigation="Cycle" 
                                                      Grid.IsSharedSizeScope="True" 
                                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                                      KeyboardNavigation.TabNavigation="Cycle"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSuspendingPopupAnimation" Value="True">
                                <Setter TargetName="PART_Popup" Property="PopupAnimation" Value="None"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                                <Setter Property="Foreground" Value="#FFFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                                <Setter Property="Foreground" Value="#FFFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#FF666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for MenuItem in submenu (darker background) -->
        <Style x:Key="SubmenuMenuItemStyle" TargetType="MenuItem" BasedOn="{StaticResource {x:Type MenuItem}}">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="#FF464646"
                        BorderThickness="1"
                        CornerRadius="2"
                        SnapsToDevicePixels="True">
                            <Grid>
                                <!-- ÐšÐ¾Ð½Ñ‚ÐµÐ½Ñ‚ Ð¼ÐµÐ½ÑŽ -->
                                <ContentPresenter x:Name="HeaderHost"
                                          
                                          ContentSource="Header"
                                          RecognizesAccessKey="True"
                                          Margin="8,4"
                                          TextElement.Foreground="{TemplateBinding Foreground}"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Ð¥Ð¾Ð²ÐµÑ€ / Ð¿Ð¾Ð´ÑÐ²ÐµÑ‚ÐºÐ° -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                                <Setter Property="Foreground" Value="#FFFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                                <Setter Property="Foreground" Value="#FFFFFFFF"/>
                            </Trigger>
                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                    <Setter Property="Foreground" Value="#FFFFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <!-- Install Button Style -->
        <Style x:Key="InstallButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF66BB6A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF464646"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton"
                                          Grid.Column="2"
                                          Focusable="False"
                                          ClickMode="Press"
                                          IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="#FF2D2D30" 
                                                BorderThickness="0"
                                                CornerRadius="4"
                                                Padding="4,0,8,0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Path x:Name="Arrow" 
                                                      Grid.Column="1"
                                                      Fill="#FF888888" 
                                                      HorizontalAlignment="Right" 
                                                      VerticalAlignment="Center"
                                                      Data="M 0 0 L 4 4 L 8 0 Z" 
                                                      Margin="4,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="8,0,23,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <TextBox x:Name="PART_EditableTextBox"
                                     Style="{x:Null}"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Margin="8,0,23,0"
                                     Focusable="True"
                                     Background="Transparent"
                                     Foreground="#FFFFFFFF"
                                     BorderThickness="0"
                                     Visibility="Hidden"
                                     IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   PlacementTarget="{Binding ElementName=ToggleButton}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide"
                                   IsOpen="{TemplateBinding IsDropDownOpen}">
                                <Border Name="DropDownBorder"
                                        Background="#FF2D2D30"
                                        BorderThickness="1"
                                        BorderBrush="#FF464646"
                                        CornerRadius="4"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                        MinWidth="{Binding ActualWidth, ElementName=ToggleButton}"
                                        Margin="0,2,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#80000000" BlurRadius="8" ShadowDepth="2" Opacity="0.5"/>
                                    </Border.Effect>
                                    <ScrollViewer Margin="0" CanContentScroll="True" VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF007ACC"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="#FF1C97EA"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFD4D4D4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- GroupBox Style -->
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#FFD4D4D4"/>
            <Setter Property="BorderBrush" Value="#FF464646"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="1" BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <ContentPresenter Grid.Row="0" Margin="0"/>
                                </Grid>
                            </Border>
                            <Border Grid.Row="0" Background="{TemplateBinding Background}" 
                                    Padding="5,0" Margin="10,0,0,0" HorizontalAlignment="Left">
                                <ContentPresenter ContentSource="Header">
                                    <ContentPresenter.Content>
                                        <TextBlock Text="{TemplateBinding Content}" 
                                                   Foreground="{TemplateBinding Foreground}"
                                                   FontWeight="Bold"/>
                                    </ContentPresenter.Content>
                                </ContentPresenter>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListBox Style -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
        </Style>

        <!-- ListBoxItem Style -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="1"
                                BorderBrush="Transparent">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FF007ACC"/>
                                <Setter Property="BorderBrush" Value="#FF1C97EA"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="Border" 
                                    Width="20" Height="20"
                                    Background="Transparent"
                                    BorderBrush="#FF007ACC"
                                    BorderThickness="2"
                                    CornerRadius="4"
                                    Grid.Column="0"
                                    Margin="0,0,8,0">
                                <Grid>
                                    <!-- Ð—ÐµÐ»ÐµÐ½Ð°Ñ Ð³Ð°Ð»Ð¾Ñ‡ÐºÐ° -->
                                    <Path x:Name="CheckMark"
                                          Data="M 3 10 L 8 15 L 17 4"
                                          Stroke="#FF4CAF50"
                                          StrokeThickness="3"
                                          Fill="Transparent"
                                          Visibility="Collapsed"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"
                                          StrokeLineJoin="Round">
                                        <Path.Effect>
                                            <DropShadowEffect Color="#FF4CAF50" BlurRadius="3" ShadowDepth="0" Opacity="0.6"/>
                                        </Path.Effect>
                                    </Path>
                                    <!-- ÐšÑ€ÐµÑÑ‚Ð¸Ðº Ð´Ð»Ñ Ð²Ñ‹ÐºÐ»ÑŽÑ‡ÐµÐ½Ð½Ð¾Ð³Ð¾ ÑÐ¾ÑÑ‚Ð¾ÑÐ½Ð¸Ñ (Ð½ÐµÐ¾Ð±ÑÐ·Ð°Ñ‚ÐµÐ»ÑŒÐ½Ð¾, Ð½Ð¾ Ð¼Ð¾Ð¶Ð½Ð¾ Ð¸ÑÐ¿Ð¾Ð»ÑŒÐ·Ð¾Ð²Ð°Ñ‚ÑŒ Ð´Ñ€ÑƒÐ³ÑƒÑŽ Ð¸ÐºÐ¾Ð½ÐºÑƒ) -->
                                </Grid>
                            </Border>
                            <ContentPresenter Grid.Column="1" 
                                            Content="{TemplateBinding Content}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Border" Property="Background" Value="#FF2D4A2E"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF4CAF50"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="Transparent"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF666666"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF007ACC"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="2.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- StatusBar Style -->
        <Style TargetType="StatusBar">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <!-- ProgressBar Style -->
        <Style TargetType="ProgressBar">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="#FF4CAF50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Border x:Name="PART_Track" 
                                       Background="{TemplateBinding Background}" 
                                       CornerRadius="4"/>
                                <Border x:Name="PART_Indicator" 
                                       Background="{TemplateBinding Foreground}" 
                                       HorizontalAlignment="Left"
                                       CornerRadius="4"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#FF007ACC" BorderThickness="2" CornerRadius="8">
        <AdornerDecorator>
            <Grid Margin="10">
                <!-- Resize Grips - Ð²Ð¸Ð´Ð¸Ð¼Ñ‹Ðµ Ð¾Ð±Ð»Ð°ÑÑ‚Ð¸ Ð´Ð»Ñ Ð¸Ð·Ð¼ÐµÐ½ÐµÐ½Ð¸Ñ Ñ€Ð°Ð·Ð¼ÐµÑ€Ð° -->
                <!-- Top -->
                <Border Name="ResizeTop" Height="6" VerticalAlignment="Top" Margin="2,0,2,0" 
                    Background="Transparent" Cursor="SizeNS" MouseLeftButtonDown="ResizeTop_MouseDown"/>
                <!-- Bottom -->
                <Border Name="ResizeBottom" Height="6" VerticalAlignment="Bottom" Margin="2,0,2,0" 
                    Background="Transparent" Cursor="SizeNS" MouseLeftButtonDown="ResizeBottom_MouseDown"/>
                <!-- Left -->
                <Border Name="ResizeLeft" Width="6" HorizontalAlignment="Left" Margin="0,2,0,2" 
                    Background="Transparent" Cursor="SizeWE" MouseLeftButtonDown="ResizeLeft_MouseDown"/>
                <!-- Right -->
                <Border Name="ResizeRight" Width="6" HorizontalAlignment="Right" Margin="0,2,0,2" 
                    Background="Transparent" Cursor="SizeWE" MouseLeftButtonDown="ResizeRight_MouseDown"/>
                <!-- Top-Left -->
                <Border Name="ResizeTopLeft" Width="6" Height="6" HorizontalAlignment="Left" VerticalAlignment="Top" 
                    Background="Transparent" Cursor="SizeNWSE" MouseLeftButtonDown="ResizeTopLeft_MouseDown"/>
                <!-- Top-Right -->
                <Border Name="ResizeTopRight" Width="6" Height="6" HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Background="Transparent" Cursor="SizeNESW" MouseLeftButtonDown="ResizeTopRight_MouseDown"/>
                <!-- Bottom-Left -->
                <Border Name="ResizeBottomLeft" Width="6" Height="6" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                    Background="Transparent" Cursor="SizeNESW" MouseLeftButtonDown="ResizeBottomLeft_MouseDown"/>
                <!-- Bottom-Right -->
                <Border Name="ResizeBottomRight" Width="16" Height="16" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                    Background="#33007ACC" BorderBrush="#FF007ACC" BorderThickness="0,0,1,1" 
                    CornerRadius="0,0,0,0" Cursor="SizeNWSE" MouseLeftButtonDown="ResizeBottomRight_MouseDown"
                    MouseEnter="ResizeGrip_MouseEnter" MouseLeave="ResizeGrip_MouseLeave">
                    <!-- Ð’Ð¸Ð·ÑƒÐ°Ð»ÑŒÐ½Ñ‹Ð¹ Ð¸Ð½Ð´Ð¸ÐºÐ°Ñ‚Ð¾Ñ€ Ð² Ð¿Ñ€Ð°Ð²Ð¾Ð¼ Ð½Ð¸Ð¶Ð½ÐµÐ¼ ÑƒÐ³Ð»Ñƒ (ÐºÐ°Ðº Ð² Windows) -->
                    <Grid>
                        <Path Data="M 0,16 L 16,16 L 16,0" Stroke="#FF007ACC" StrokeThickness="1.5" Opacity="0.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round"/>
                        <Line X1="4" Y1="16" X2="16" Y2="4" Stroke="#FF007ACC" StrokeThickness="1.5" Opacity="0.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                        <Line X1="8" Y1="16" X2="16" Y2="8" Stroke="#FF007ACC" StrokeThickness="1.5" Opacity="0.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                        <Line X1="12" Y1="16" X2="16" Y2="12" Stroke="#FF007ACC" StrokeThickness="1.5" Opacity="0.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                    </Grid>
                </Border>

                <!-- Main Content -->
                <Grid Grid.ZIndex="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title Bar -->
                    <Grid Grid.Row="0" Margin="0,0,0,10" MouseDown="TitleBar_MouseDown" Cursor="Hand">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="TitleTextBlock" Text="S.T.A.L.K.E.R. 2 Mod Manager" 
                          FontSize="18" 
                          FontWeight="Bold"
                          Foreground="#FFFFFFFF"
                          VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,10,0">
                            <ComboBox x:Name="LanguageComboBox" Width="140" Height="32" 
                              SelectionChanged="LanguageComboBox_SelectionChanged"
                              VerticalContentAlignment="Center"
                              IsEditable="False"
                              IsReadOnly="True"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button Content="â”€" Width="40" Height="30" Click="MinimizeWindow_Click" 
                            Padding="0" Margin="0,0,2,0"/>
                            <Button Content="âœ•" Width="40" Height="30" Click="CloseWindow_Click"
                            Padding="0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Paths -->
                    <GroupBox Grid.Row="1" x:Name="PathsGroupBox" Header="Paths">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" x:Name="VortexPathLabel" Content="Vortex Path:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="VortexPathTextBox" VerticalContentAlignment="Center"/>
                            <Button Grid.Row="0" Grid.Column="2" x:Name="BrowseVortexButton" Content="Browse..." Click="BrowseVortexPath_Click" Margin="5,0,0,0" Padding="10,0"/>

                            <Label Grid.Row="1" Grid.Column="0" x:Name="TargetPathLabel" Content="Target Path:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="TargetPathTextBox" VerticalContentAlignment="Center"/>
                            <Button Grid.Row="1" Grid.Column="2" x:Name="BrowseTargetButton" Content="Browse..." Click="BrowseTargetPath_Click" Margin="5,0,0,0" Padding="10,0"/>
                        </Grid>
                    </GroupBox>

                    <!-- Actions Menu -->
                    <Menu Grid.Row="2" Background="#FF2D2D30" Margin="0,10,0,10">
                        <MenuItem x:Name="FileMenuItem" Header="_File">
                            <MenuItem x:Name="LoadModsMenuItem" Header="_Load Mods" Click="LoadMods_Click" Style="{StaticResource SubmenuMenuItemStyle}" Cursor="Hand"/>
                            <Separator/>
                            <MenuItem x:Name="SaveConfigMenuItem" Header="_Save Config" Click="SaveConfig_Click" Style="{StaticResource SubmenuMenuItemStyle}"/>
                            <MenuItem x:Name="LoadConfigMenuItem" Header="_Load Config" Click="LoadConfig_Click" Style="{StaticResource SubmenuMenuItemStyle}"/>
                            <Separator/>
                            <MenuItem x:Name="AboutMenuItem" Header="_About" Click="About_Click" Style="{StaticResource SubmenuMenuItemStyle}"/>
                        </MenuItem>
                        <MenuItem x:Name="OrderMenuItem" Header="_Order" Cursor="Hand">
                            <MenuItem x:Name="ExportOrderMenuItem" Header="_Export Order" Click="ExportOrder_Click" Style="{StaticResource SubmenuMenuItemStyle}"/>
                            <MenuItem x:Name="ImportOrderMenuItem" Header="_Import Order" Click="ImportOrder_Click" Style="{StaticResource SubmenuMenuItemStyle}"/>
                        </MenuItem>
                        <MenuItem x:Name="ToolsMenuItem" Header="_Tools">
                            <MenuItem x:Name="AdvancedMenuItem" Header="_Advanced" Click="Advanced_Click" Style="{StaticResource SubmenuMenuItemStyle}"/>
                        </MenuItem>
                        <MenuItem x:Name="SettingsMenuItem" Header="_Settings">
                            <MenuItem x:Name="LoadCustomLocalizationMenuItem" Header="_Load Custom Localization..." Click="LoadCustomLocalization_Click" Style="{StaticResource SubmenuMenuItemStyle}"/>
                            <MenuItem x:Name="ResetLocalizationMenuItem" Header="_Reset to Default Localization" Click="ResetLocalization_Click" Style="{StaticResource SubmenuMenuItemStyle}"/>
                        </MenuItem>
                        <MenuItem x:Name="InstallMenuItem" Header="_Install">
                            <MenuItem x:Name="InstallModsMenuItem" Header="_Install Mods" Click="InstallMods_Click" Style="{StaticResource SubmenuMenuItemStyle}"/>
                            <MenuItem x:Name="ClearModsMenuItem" Header="_Clear ~mods Folder" Click="ClearMods_Click" Style="{StaticResource SubmenuMenuItemStyle}"/>
                            <MenuItem x:Name="DlcModLoaderMenuItem" Header="_DLC Mod Loader" Click="DlcModLoader_Click" Style="{StaticResource SubmenuMenuItemStyle}"/>
                        </MenuItem>
                    </Menu>

                    <!-- Mods List -->
                    <GroupBox Grid.Row="3" x:Name="ModsGroupBox" Header="Mods" MinHeight="200">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Search Box -->
                                <Border Grid.Row="0" Margin="0,0,0,10" Background="#FF2D2D30" Padding="5,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#FF888888"/>
                                        <TextBox Grid.Column="1" x:Name="SearchModsTextBox" 
                                         Background="{StaticResource HoverBackgroundBrush}" 
                                         Foreground="#FFFFFFFF"
                                         BorderThickness="1"
                                         BorderBrush="#FF464646"
                                         Padding="5,4"
                                         FontSize="12"
                                         VerticalContentAlignment="Center"
                                         TextChanged="SearchModsTextBox_TextChanged"/>
                                    </Grid>
                                </Border>

                                <!-- Column Headers -->
                                <Border Grid.Row="1" Margin="0,0,0,5" Background="#FF2D2D30" Padding="5,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="1" x:Name="OrderHeader" Text="Order" 
                                          Foreground="#FF888888" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" x:Name="NameHeader" Text="Mod Name" 
                                          Foreground="#FF888888" FontSize="11" FontWeight="Bold" Margin="5,0,0,0"/>
                                        <TextBlock Grid.Column="3" x:Name="TargetFolderHeader" Text="Target Folder" 
                                          Foreground="#FF888888" FontSize="11" FontWeight="Bold" Margin="5,0,0,0"/>
                                    </Grid>
                                </Border>

                                <AdornerDecorator Grid.Row="2">
                                    <ListBox x:Name="ModsListBox" SelectionMode="Extended" 
                            PreviewMouseLeftButtonDown="ModsListBox_PreviewMouseLeftButtonDown"
                            PreviewKeyDown="ModsListBox_PreviewKeyDown"
                            MouseMove="ModsListBox_MouseMove"
                            Drop="ModsListBox_Drop"
                            AllowDrop="True"
                            DragOver="ModsListBox_DragOver"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="30"/>
                                                        <ColumnDefinition Width="50"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <CheckBox Grid.Column="0" 
                                            IsChecked="{Binding IsEnabled}" 
                                            Click="CheckBox_Click"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding Order, StringFormat='[{0}]'}" 
                                              FontWeight="Bold" 
                                              Foreground="#FF007ACC"
                                              HorizontalAlignment="Center"/>
                                                    <TextBlock Grid.Column="2" Text="{Binding Name}" 
                                              Foreground="#FFFFFFFF"
                                              FontSize="12"
                                              Margin="5,0,0,0"
                                              VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="3" Text="{Binding TargetFolderName}" 
                                              Foreground="#FF4CAF50" 
                                              Margin="5,0,0,0" 
                                              FontWeight="SemiBold"
                                              FontSize="12"
                                              VerticalAlignment="Center"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </AdornerDecorator>
                            </Grid>

                            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10,0,0,0" VerticalAlignment="Top">
                                <Button x:Name="MoveUpButton" Content="â†‘ Move Up" Click="MoveUp_Click" Margin="0,0,0,5" Width="120"/>
                                <Button x:Name="MoveDownButton" Content="â†“ Move Down" Click="MoveDown_Click" Margin="0,0,0,0" Width="120"/>
                                
                                <!-- Save/Cancel Buttons -->
                                <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                                    <Button x:Name="SaveChangesButton" Click="SaveModsList_Click" Margin="0,0,0,5" Padding="10,5" IsEnabled="False" MinWidth="80"  Content="Save"/>
                                    <Button x:Name="CancelChangesButton" Click="CancelChanges_Click" Margin="0,0,0,0" Padding="10,5" IsEnabled="False" MinWidth="80"  Content="Cancel"/>
                                </StackPanel>
                                <Button x:Name="InstallModsButton" Content="Install Mods" Click="InstallMods_Click" Margin="0,20,0,0" Width="120" IsEnabled="False"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- Status -->
                    <Grid Grid.Row="4" Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StatusBar Grid.Row="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ProgressBar x:Name="ProgressBar" 
                                    Grid.Column="1" 
                                    Width="200" 
                                    Height="20" 
                                    Margin="10,0,0,0"
                                    Minimum="0" 
                                    Maximum="100" 
                                    Value="0"
                                    Visibility="Collapsed"/>
                                <TextBlock x:Name="StatusTextBlock" Text="Ready" VerticalAlignment="Center"/>
                            </Grid>
                        </StatusBar>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="ProgressTextBlock" 
                              Grid.Column="0"
                              Foreground="#FF888888" 
                              FontSize="11" 
                              Margin="0,5,0,0"
                              Text="" 
                              HorizontalAlignment="Left"/>
                            <TextBlock x:Name="VersionTextBlock" 
                              Grid.Column="1"
                              Text="v1.0.0" 
                              FontSize="10" 
                              Foreground="#FF666666"
                              Margin="0,5,20,0"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Top"
                              Visibility="Visible"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </AdornerDecorator>
    </Border>
</Window>
