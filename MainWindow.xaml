<Window x:Class="Stalker2ModManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="S.T.A.L.K.E.R. 2 Mod Manager" Height="750" Width="1100"
        Background="#FF1E1E1E" WindowStyle="None" AllowsTransparency="True">
    <Window.Resources>
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#40000000" BlurRadius="3" ShadowDepth="1"/>
                            </Border.Effect>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E42"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Install Button Style -->
        <Style x:Key="InstallButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF66BB6A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF464646"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Label Style -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFD4D4D4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- GroupBox Style -->
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#FFD4D4D4"/>
            <Setter Property="BorderBrush" Value="#FF464646"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="1" BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <ContentPresenter Grid.Row="0" Margin="0"/>
                                </Grid>
                            </Border>
                            <Border Grid.Row="0" Background="{TemplateBinding Background}" 
                                    Padding="5,0" Margin="10,0,0,0" HorizontalAlignment="Left">
                                <ContentPresenter ContentSource="Header">
                                    <ContentPresenter.Content>
                                        <TextBlock Text="{TemplateBinding Content}" 
                                                   Foreground="{TemplateBinding Foreground}"
                                                   FontWeight="Bold"/>
                                    </ContentPresenter.Content>
                                </ContentPresenter>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListBox Style -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
        </Style>

        <!-- ListBoxItem Style -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="1"
                                BorderBrush="Transparent">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FF007ACC"/>
                                <Setter Property="BorderBrush" Value="#FF1C97EA"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3E3E42"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="Border" 
                                    Width="18" Height="18"
                                    Background="#FF3E3E42"
                                    BorderBrush="#FF464646"
                                    BorderThickness="2"
                                    CornerRadius="3"
                                    Grid.Column="0"
                                    Margin="0,0,8,0">
                                <Path x:Name="CheckMark"
                                      Data="M 0 5 L 5 10 L 13 0"
                                      Stroke="#FF4CAF50"
                                      StrokeThickness="2.5"
                                      Fill="Transparent"
                                      Visibility="Collapsed"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            <ContentPresenter Grid.Column="1" 
                                            Content="{TemplateBinding Content}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Border" Property="Background" Value="#FF4CAF50"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF66BB6A"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- StatusBar Style -->
        <Style TargetType="StatusBar">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#FF007ACC" BorderThickness="2" CornerRadius="8">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,10" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="S.T.A.L.K.E.R. 2 Mod Manager" 
                          FontSize="18" 
                          FontWeight="Bold"
                          Foreground="#FFFFFFFF"
                          VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="─" Width="40" Height="30" Click="MinimizeWindow_Click" 
                            Background="#FF2D2D30" Padding="0"/>
                    <Button Content="✕" Width="40" Height="30" Click="CloseWindow_Click"
                            Background="#FF2D2D30" Padding="0"/>
                </StackPanel>
            </Grid>

            <!-- Paths -->
            <GroupBox Grid.Row="1" Header="Paths">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Vortex Path:" VerticalAlignment="Center" Margin="0,5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="VortexPathTextBox" VerticalContentAlignment="Center"/>
                    <Button Grid.Row="0" Grid.Column="2" Content="Browse..." Click="BrowseVortexPath_Click" Margin="5,0,0,0" Padding="10,0"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Target Path:" VerticalAlignment="Center" Margin="0,5"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="TargetPathTextBox" VerticalContentAlignment="Center"/>
                    <Button Grid.Row="1" Grid.Column="2" Content="Browse..." Click="BrowseTargetPath_Click" Margin="5,0,0,0" Padding="10,0"/>
                </Grid>
            </GroupBox>

            <!-- Actions -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,10">
                <Button Content="Load Mods" Click="LoadMods_Click" Margin="0,0,5,0"/>
                <Button Content="Save Config" Click="SaveConfig_Click" Margin="0,0,5,0"/>
                <Button Content="Load Config" Click="LoadConfig_Click" Margin="0,0,5,0"/>
                <Separator Margin="5,0" Background="#FF464646"/>
                <Button Content="Export Order" Click="ExportOrder_Click" Margin="5,0,5,0"/>
                <Button Content="Import Order" Click="ImportOrder_Click" Margin="0,0,5,0"/>
                <Separator Margin="5,0" Background="#FF464646"/>
                <Button Content="Install Mods" Click="InstallMods_Click" Style="{StaticResource InstallButtonStyle}"/>
            </StackPanel>

            <!-- Mods List -->
            <GroupBox Grid.Row="3" Header="Mods" MinHeight="200">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <ListBox x:Name="ModsListBox" SelectionMode="Single" 
                            PreviewMouseLeftButtonDown="ModsListBox_PreviewMouseLeftButtonDown"
                            MouseMove="ModsListBox_MouseMove"
                            Drop="ModsListBox_Drop"
                            AllowDrop="True"
                            DragOver="ModsListBox_DragOver"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Grid.Column="0" 
                                            IsChecked="{Binding IsEnabled}" 
                                            Click="CheckBox_Click"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5,0,0,0">
                                        <TextBlock Text="{Binding Order, StringFormat='[{0}]'}" 
                                                  FontWeight="Bold" 
                                                  Foreground="#FF007ACC"
                                                  Margin="0,0,8,0"
                                                  Width="40"/>
                                        <TextBlock Text="{Binding Name}" 
                                                  Foreground="#FFFFFFFF"
                                                  FontSize="12"/>
                                        <TextBlock Text="{Binding GetTargetFolderName(), StringFormat='→ {0}'}" 
                                                  Foreground="#FF888888" 
                                                  Margin="10,0,0,0" 
                                                  FontStyle="Italic"
                                                  FontSize="11"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    </Grid>

                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10,0,0,0">
                        <Button Content="↑ Move Up" Click="MoveUp_Click" Margin="0,0,0,5" Width="120"/>
                        <Button Content="↓ Move Down" Click="MoveDown_Click" Margin="0,0,0,5" Width="120"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Status -->
            <StatusBar Grid.Row="4" Margin="0,10,0,0">
                <TextBlock x:Name="StatusTextBlock" Text="Ready"/>
            </StatusBar>
        </Grid>
    </Border>
</Window>
