<Window x:Class="Stalker2ModManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="S.T.A.L.K.E.R. 2 Mod Manager" Height="750" Width="1100"
        Background="#FF1E1E1E" WindowStyle="None" AllowsTransparency="True"
        ResizeMode="CanResize" MinWidth="800" MinHeight="600" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#40000000" BlurRadius="3" ShadowDepth="1"/>
                            </Border.Effect>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E42"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Install Button Style -->
        <Style x:Key="InstallButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF66BB6A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF464646"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Label Style -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFD4D4D4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- GroupBox Style -->
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#FFD4D4D4"/>
            <Setter Property="BorderBrush" Value="#FF464646"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="1" BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <ContentPresenter Grid.Row="0" Margin="0"/>
                                </Grid>
                            </Border>
                            <Border Grid.Row="0" Background="{TemplateBinding Background}" 
                                    Padding="5,0" Margin="10,0,0,0" HorizontalAlignment="Left">
                                <ContentPresenter ContentSource="Header">
                                    <ContentPresenter.Content>
                                        <TextBlock Text="{TemplateBinding Content}" 
                                                   Foreground="{TemplateBinding Foreground}"
                                                   FontWeight="Bold"/>
                                    </ContentPresenter.Content>
                                </ContentPresenter>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListBox Style -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
        </Style>

        <!-- ListBoxItem Style -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="1"
                                BorderBrush="Transparent">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FF007ACC"/>
                                <Setter Property="BorderBrush" Value="#FF1C97EA"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3E3E42"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="Border" 
                                    Width="20" Height="20"
                                    Background="Transparent"
                                    BorderBrush="#FF007ACC"
                                    BorderThickness="2"
                                    CornerRadius="4"
                                    Grid.Column="0"
                                    Margin="0,0,8,0">
                                <Grid>
                                    <!-- Зеленая галочка -->
                                    <Path x:Name="CheckMark"
                                          Data="M 3 10 L 8 15 L 17 4"
                                          Stroke="#FF4CAF50"
                                          StrokeThickness="3"
                                          Fill="Transparent"
                                          Visibility="Collapsed"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"
                                          StrokeLineJoin="Round">
                                        <Path.Effect>
                                            <DropShadowEffect Color="#FF4CAF50" BlurRadius="3" ShadowDepth="0" Opacity="0.6"/>
                                        </Path.Effect>
                                    </Path>
                                    <!-- Крестик для выключенного состояния (необязательно, но можно использовать другую иконку) -->
                                </Grid>
                            </Border>
                            <ContentPresenter Grid.Column="1" 
                                            Content="{TemplateBinding Content}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Border" Property="Background" Value="#FF2D4A2E"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF4CAF50"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="Transparent"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF666666"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF007ACC"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="2.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- StatusBar Style -->
        <Style TargetType="StatusBar">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <!-- ProgressBar Style -->
        <Style TargetType="ProgressBar">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="#FF4CAF50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Border x:Name="PART_Track" 
                                       Background="{TemplateBinding Background}" 
                                       CornerRadius="4"/>
                                <Border x:Name="PART_Indicator" 
                                       Background="{TemplateBinding Foreground}" 
                                       HorizontalAlignment="Left"
                                       CornerRadius="4"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#FF007ACC" BorderThickness="2" CornerRadius="8">
        <AdornerDecorator>
            <Grid Margin="10">
            <!-- Resize Grips - видимые области для изменения размера -->
            <!-- Top -->
            <Border Name="ResizeTop" Height="6" VerticalAlignment="Top" Margin="2,0,2,0" 
                    Background="Transparent" Cursor="SizeNS" MouseLeftButtonDown="ResizeTop_MouseDown"/>
            <!-- Bottom -->
            <Border Name="ResizeBottom" Height="6" VerticalAlignment="Bottom" Margin="2,0,2,0" 
                    Background="Transparent" Cursor="SizeNS" MouseLeftButtonDown="ResizeBottom_MouseDown"/>
            <!-- Left -->
            <Border Name="ResizeLeft" Width="6" HorizontalAlignment="Left" Margin="0,2,0,2" 
                    Background="Transparent" Cursor="SizeWE" MouseLeftButtonDown="ResizeLeft_MouseDown"/>
            <!-- Right -->
            <Border Name="ResizeRight" Width="6" HorizontalAlignment="Right" Margin="0,2,0,2" 
                    Background="Transparent" Cursor="SizeWE" MouseLeftButtonDown="ResizeRight_MouseDown"/>
            <!-- Top-Left -->
            <Border Name="ResizeTopLeft" Width="6" Height="6" HorizontalAlignment="Left" VerticalAlignment="Top" 
                    Background="Transparent" Cursor="SizeNWSE" MouseLeftButtonDown="ResizeTopLeft_MouseDown"/>
            <!-- Top-Right -->
            <Border Name="ResizeTopRight" Width="6" Height="6" HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Background="Transparent" Cursor="SizeNESW" MouseLeftButtonDown="ResizeTopRight_MouseDown"/>
            <!-- Bottom-Left -->
            <Border Name="ResizeBottomLeft" Width="6" Height="6" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                    Background="Transparent" Cursor="SizeNESW" MouseLeftButtonDown="ResizeBottomLeft_MouseDown"/>
            <!-- Bottom-Right -->
            <Border Name="ResizeBottomRight" Width="16" Height="16" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                    Background="#33007ACC" BorderBrush="#FF007ACC" BorderThickness="0,0,1,1" 
                    CornerRadius="0,0,0,0" Cursor="SizeNWSE" MouseLeftButtonDown="ResizeBottomRight_MouseDown"
                    MouseEnter="ResizeGrip_MouseEnter" MouseLeave="ResizeGrip_MouseLeave">
                <!-- Визуальный индикатор в правом нижнем углу (как в Windows) -->
                <Grid>
                    <Path Data="M 0,16 L 16,16 L 16,0" Stroke="#FF007ACC" StrokeThickness="1.5" Opacity="0.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round"/>
                    <Line X1="4" Y1="16" X2="16" Y2="4" Stroke="#FF007ACC" StrokeThickness="1.5" Opacity="0.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                    <Line X1="8" Y1="16" X2="16" Y2="8" Stroke="#FF007ACC" StrokeThickness="1.5" Opacity="0.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                    <Line X1="12" Y1="16" X2="16" Y2="12" Stroke="#FF007ACC" StrokeThickness="1.5" Opacity="0.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                </Grid>
            </Border>
            
            <!-- Main Content -->
            <Grid Grid.ZIndex="1">
                <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,10" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TitleTextBlock" Text="S.T.A.L.K.E.R. 2 Mod Manager" 
                          FontSize="18" 
                          FontWeight="Bold"
                          Foreground="#FFFFFFFF"
                          VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,10,0">
                    <Button x:Name="LanguageButton" Content="EN" Width="50" Height="30" Click="LanguageButton_Click" 
                            Background="#FF2D2D30" Padding="0" ToolTip="Switch Language / Переключить язык"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="─" Width="40" Height="30" Click="MinimizeWindow_Click" 
                            Background="#FF2D2D30" Padding="0"/>
                    <Button Content="✕" Width="40" Height="30" Click="CloseWindow_Click"
                            Background="#FF2D2D30" Padding="0"/>
                </StackPanel>
            </Grid>

            <!-- Paths -->
            <GroupBox Grid.Row="1" x:Name="PathsGroupBox" Header="Paths">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" x:Name="VortexPathLabel" Content="Vortex Path:" VerticalAlignment="Center" Margin="0,5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="VortexPathTextBox" VerticalContentAlignment="Center"/>
                    <Button Grid.Row="0" Grid.Column="2" x:Name="BrowseVortexButton" Content="Browse..." Click="BrowseVortexPath_Click" Margin="5,0,0,0" Padding="10,0"/>

                    <Label Grid.Row="1" Grid.Column="0" x:Name="TargetPathLabel" Content="Target Path:" VerticalAlignment="Center" Margin="0,5"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="TargetPathTextBox" VerticalContentAlignment="Center"/>
                    <Button Grid.Row="1" Grid.Column="2" x:Name="BrowseTargetButton" Content="Browse..." Click="BrowseTargetPath_Click" Margin="5,0,0,0" Padding="10,0"/>
                </Grid>
            </GroupBox>

            <!-- Actions -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,10">
                <Button x:Name="LoadModsButton" Content="Load Mods" Click="LoadMods_Click" Margin="0,0,5,0"/>
                <Button x:Name="SaveConfigButton" Content="Save Config" Click="SaveConfig_Click" Margin="0,0,5,0"/>
                <Button x:Name="LoadConfigButton" Content="Load Config" Click="LoadConfig_Click" Margin="0,0,5,0"/>
                <Separator Margin="5,0" Background="#FF464646"/>
                <Button x:Name="ExportOrderButton" Content="Export Order" Click="ExportOrder_Click" Margin="5,0,5,0"/>
                <Button x:Name="ImportOrderButton" Content="Import Order" Click="ImportOrder_Click" Margin="0,0,5,0"/>
                <Separator Margin="5,0" Background="#FF464646"/>
                <Button x:Name="AdvancedButton" Content="Advanced" Click="Advanced_Click" Margin="0,0,5,0"/>
                <Separator Margin="5,0" Background="#FF464646"/>
                <Button x:Name="InstallModsButton" Content="Install Mods" Click="InstallMods_Click" Style="{StaticResource InstallButtonStyle}"/>
            </StackPanel>

            <!-- Mods List -->
            <GroupBox Grid.Row="3" x:Name="ModsGroupBox" Header="Mods" MinHeight="200">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Column Headers -->
                        <Border Grid.Row="0" Margin="0,0,0,5" Background="#FF2D2D30" Padding="5,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="1" x:Name="OrderHeader" Text="Order" 
                                          Foreground="#FF888888" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="2" x:Name="NameHeader" Text="Mod Name" 
                                          Foreground="#FF888888" FontSize="11" FontWeight="Bold" Margin="5,0,0,0"/>
                                <TextBlock Grid.Column="3" x:Name="TargetFolderHeader" Text="Target Folder" 
                                          Foreground="#FF888888" FontSize="11" FontWeight="Bold" Margin="5,0,0,0"/>
                            </Grid>
                        </Border>
                        
                        <AdornerDecorator Grid.Row="1">
                            <ListBox x:Name="ModsListBox" SelectionMode="Single" 
                            PreviewMouseLeftButtonDown="ModsListBox_PreviewMouseLeftButtonDown"
                            MouseMove="ModsListBox_MouseMove"
                            Drop="ModsListBox_Drop"
                            AllowDrop="True"
                            DragOver="ModsListBox_DragOver"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Grid.Column="0" 
                                            IsChecked="{Binding IsEnabled}" 
                                            Click="CheckBox_Click"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Order, StringFormat='[{0}]'}" 
                                              FontWeight="Bold" 
                                              Foreground="#FF007ACC"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Name}" 
                                              Foreground="#FFFFFFFF"
                                              FontSize="12"
                                              Margin="5,0,0,0"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="3" Text="{Binding TargetFolderName}" 
                                              Foreground="#FF4CAF50" 
                                              Margin="5,0,0,0" 
                                              FontWeight="SemiBold"
                                              FontSize="12"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                        </AdornerDecorator>
                    </Grid>

                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10,0,0,0">
                        <Button x:Name="MoveUpButton" Content="↑ Move Up" Click="MoveUp_Click" Margin="0,0,0,5" Width="120"/>
                        <Button x:Name="MoveDownButton" Content="↓ Move Down" Click="MoveDown_Click" Margin="0,0,0,5" Width="120"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Status -->
            <Grid Grid.Row="4" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StatusBar Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="StatusTextBlock" Text="Ready" VerticalAlignment="Center"/>
                        <ProgressBar x:Name="ProgressBar" 
                                    Grid.Column="1" 
                                    Width="200" 
                                    Height="20" 
                                    Margin="10,0,0,0"
                                    Minimum="0" 
                                    Maximum="100" 
                                    Value="0"
                                    Visibility="Collapsed"/>
                    </Grid>
                </StatusBar>
                <TextBlock x:Name="ProgressTextBlock" 
                          Grid.Row="1" 
                          Foreground="#FF888888" 
                          FontSize="11" 
                          Margin="0,5,0,0"
                          Text="" 
                          HorizontalAlignment="Left"/>
                </Grid>
            </Grid>
        </Grid>
        </AdornerDecorator>
    </Border>
</Window>
