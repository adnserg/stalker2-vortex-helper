<Window x:Class="Stalker2ModManager.WarningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Warning" MinHeight="200" MinWidth="500" MaxWidth="800"
        Background="#FF1E1E1E" WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#40000000" BlurRadius="3" ShadowDepth="1"/>
                            </Border.Effect>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E42"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border BorderBrush="#FF007ACC" BorderThickness="2" CornerRadius="8">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,15" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TitleTextBlock" Text="Warning" 
                          FontSize="18" 
                          FontWeight="Bold"
                          Foreground="#FFFFFFFF"
                          VerticalAlignment="Center"/>
                <Button Grid.Column="1" Content="✕" Width="30" Height="30" Click="CloseButton_Click"
                        Background="#FF2D2D30" Padding="0"/>
            </Grid>
            
            <!-- Message Content -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                             Text="⚠️" 
                             FontSize="32" 
                             VerticalAlignment="Top" 
                             Margin="0,0,15,0"/>
                    <TextBlock x:Name="MessageTextBlock" 
                             Grid.Column="1"
                             Text="Warning message" 
                             FontSize="14"
                             Foreground="#FFFFFFFF"
                             TextWrapping="Wrap"
                             VerticalAlignment="Top"
                             MaxWidth="650"/>
                </Grid>
                <TextBlock x:Name="DetailsTextBlock" 
                         Grid.Row="1"
                         Grid.ColumnSpan="2"
                         Text="" 
                         FontSize="12"
                         Foreground="#FFCCCCCC"
                         TextWrapping="Wrap"
                         Margin="47,0,0,0"
                         Visibility="Collapsed"
                         MaxWidth="650"/>
            </Grid>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton" Content="Cancel" Width="100" Click="CancelButton_Click" Margin="0,0,10,0"/>
                <Button x:Name="OkButton" Content="OK" Width="100" Click="OkButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

