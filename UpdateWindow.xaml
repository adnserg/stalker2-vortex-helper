<Window x:Class="Stalker2ModManager.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Available" Height="400" Width="500"
        Background="#FF1E1E1E" WindowStyle="None" AllowsTransparency="True"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Window.Resources>
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#40000000" BlurRadius="3" ShadowDepth="1"/>
                            </Border.Effect>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E42"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Download Button Style -->
        <Style x:Key="DownloadButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF66BB6A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#FF007ACC" BorderThickness="2" CornerRadius="8">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Update Available" 
                          FontSize="20" 
                          FontWeight="Bold"
                          Foreground="#FFFFFFFF"
                          VerticalAlignment="Center"/>
                <Button x:Name="CloseButton" Grid.Column="1" Content="âœ•" Width="30" Height="30" 
                        Click="CloseButton_Click" 
                        Background="#FF2D2D30" 
                        Padding="0"/>
            </Grid>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock x:Name="VersionTextBlock" 
                          Text="A new version is available!" 
                          Foreground="#FFD4D4D4"
                          FontSize="14"
                          Margin="0,0,0,10"/>

                <TextBlock Text="Current Version:" 
                          Foreground="#FF888888"
                          FontSize="12"
                          Margin="0,0,0,5"/>
                <TextBlock x:Name="CurrentVersionTextBlock" 
                          Text="1.0.0" 
                          Foreground="#FFFFFFFF"
                          FontSize="12"
                          FontWeight="Bold"
                          Margin="0,0,0,10"/>

                <TextBlock Text="New Version:" 
                          Foreground="#FF888888"
                          FontSize="12"
                          Margin="0,0,0,5"/>
                <TextBlock x:Name="NewVersionTextBlock" 
                          Text="1.0.0" 
                          Foreground="#FF4CAF50"
                          FontSize="12"
                          FontWeight="Bold"
                          Margin="0,0,0,15"/>

                <TextBlock Text="Release Notes:" 
                          Foreground="#FF888888"
                          FontSize="12"
                          Margin="0,0,0,5"/>
                <ScrollViewer MaxHeight="150" 
                             VerticalScrollBarVisibility="Auto"
                             BorderBrush="#FF464646"
                             BorderThickness="1"
                             Background="#FF252526"
                             Padding="10">
                    <TextBlock x:Name="ReleaseNotesTextBlock" 
                              Text="No release notes available." 
                              Foreground="#FFD4D4D4"
                              FontSize="12"
                              TextWrapping="Wrap"/>
                </ScrollViewer>
            </StackPanel>

            <!-- Download URL -->
            <TextBlock Grid.Row="2" 
                      x:Name="DownloadUrlTextBlock" 
                      Text="Click 'Install Update' to download and install automatically" 
                      Foreground="#FF888888"
                      FontSize="11"
                      Margin="0,0,0,15"
                      TextWrapping="Wrap"/>

            <!-- Progress Bar (hidden by default) -->
            <Grid Grid.Row="3" x:Name="ProgressGrid" Visibility="Collapsed" Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ProgressBar x:Name="UpdateProgressBar" 
                            Grid.Row="0"
                            Height="20" 
                            Minimum="0" 
                            Maximum="100" 
                            Value="0"
                            Margin="0,0,0,5"/>
                <TextBlock x:Name="ProgressTextBlock" 
                          Grid.Row="1"
                          Text="Downloading update..." 
                          Foreground="#FF888888"
                          FontSize="11"
                          HorizontalAlignment="Center"/>
            </Grid>

            <!-- Buttons -->
            <StackPanel Grid.Row="3" x:Name="ButtonsPanel" Orientation="Horizontal" 
                       HorizontalAlignment="Right">
                <Button x:Name="InstallButton" 
                       Content="Install Update" 
                       Click="InstallButton_Click" 
                       Style="{StaticResource DownloadButtonStyle}"
                       Margin="0,0,10,0"
                       MinWidth="140"/>
                <Button x:Name="LaterButton" 
                       Content="Later" 
                       Click="LaterButton_Click" 
                       MinWidth="100"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

